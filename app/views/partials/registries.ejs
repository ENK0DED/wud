<h1 class="title">Registries</h1>

<div class="table-container">
    <table class="table is-narrow ">

        <thead>
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Configuration</th>
        </tr>
        </thead>
        <tbody>
        <% registries.forEach((registry) => { %>
            <tr>
                <td>
                    <span class="icon is-large" title="<%= registry.type %>">
                        <% switch (registry.type) {
                        case 'hub' : %>
                        <i class="fab fa-docker fa-2x"></i>
                        <% break;
                        case 'gcr' : %>
                        <i class="fab fa-google fa-2x"></i>
                        <% break;
                        case 'ecr' : %>
                        <i class="fab fa-aws fa-2x"></i>
                        <% break;
                        case 'acr' : %>
                        <i class="fab fa-microsoft fa-2x"></i>
                        <% break;
                        default : %>
                        <i class="fas fa-question fa-2x"></i>
                        <% break;
                        } %>
                    </span>
                </td>
                <td><%= registry.name %></td>
                <td><%= JSON.stringify(registry.configuration) %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>